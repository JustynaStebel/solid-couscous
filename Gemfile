source 'https://rubygems.org'

gem 'rails', '4.2.0'
gem 'sqlite3'
gem 'mysql2'
gem 'angularjs-rails'
gem 'pry-rails', require: false

group :assets do
  gem "twitter-bootstrap-rails"
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'jquery-rails'
  gem 'jquery-ui-rails'
end

group :development, :test do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'capybara'
end

group :test do
  gem 'capybara-webkit'
  gem 'shoulda-matchers'
end
