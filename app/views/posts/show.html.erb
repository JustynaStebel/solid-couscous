<div class="col-sm-8 show-post">
  <div class="blog-post">
    <h2 class="blog-post-title"><%= @post.title %></h2>
    <p class="blog-post-meta"><%=@post.created_at %> by <a href="#">Mark</a></p>
    <p><%= @post.content %></p>
  </div>
  <%= link_to "Powrót", posts_path %>
  <%= link_to "Edytuj", edit_post_path(@post) %>
  <%= link_to "Usuń", post_path(@post), method: "delete" %>
  <nav>
    <ul class="pager">
      <li><a href="#">Previous</a></li>
      <li><a href="#">Next</a></li>
    </ul>
  </nav>

</div>
