<%= form_for(@post, :method => :post, :html => { :class => "form-horizontal post-form"} ) do |f| %>
  <div class="form-group">
    <%= f.label :title, "Tytuł" %>
    <%= f.text_field :title, { class: "form-control post-title" } %>
  </div>
  <div class="form-group">
    <%= f.label :content, "Treść posta" %>
    <%= f.text_area :content, { class: "form-control post-content" } %>
  </div>
  <button type="submit" class="btn btn-primary btn-lg">Stwórz</button>
  <%= link_to "Powrót", posts_path, class: "btn btn-default btn-lg" %>
<% end %>
